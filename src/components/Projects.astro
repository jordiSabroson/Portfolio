---
import LinkButton from "./LinkButton.astro";
import Link from "./Link.astro";

import PHP from "../icons/PHP.astro";
import Laravel from "../icons/Laravel.astro";
import Bootstrap from "../icons/Bootstrap.astro";

const TAGS = {
    PHP: {
        name: "PHP",
        class: "bg-[#777bb3] text-white",
        icon: PHP,
    },
    LARAVEL: {
        name: "Laravel",
        class: "bg-[#e62c1f] text-white",
        icon: Laravel,
    },
    BOOTSTRAP: {
        name: "Bootstrap",
        class: "bg-purple-800 text-white",
        icon: Bootstrap,
    },
};
const PROJECTS = [
    {
        title: "Bookriver",
        description:
            "Desenvolupament del front i back-end de la plataforma per a compartir ressenyes sobre llibres.",
        link: "https://jbookriver.apiabalit2.com/",
        image: "/projects/Bookriver.webp",
        tags: [TAGS.PHP, TAGS.LARAVEL, TAGS.BOOTSTRAP],
    },
];
---

<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({ title, description, image, link, tags }) => (
            <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                <div class="w-full md:w-1/2">
                    <div class="relative flex flex-col rounded-xl items-center col-span-6 row-span-5 sm:rounded-xl shadow-xl gap-8 md:group-hover:-translate-y-1 md:group-hover:shadow-2xl transition duration-500 ease-in-out transform lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                        <img
                            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                            src={image}
                            alt={title}
                            loading="lazy"
                        />
                    </div>
                </div>

                <div class="w-full md:w-1/2 md:max-w-lg">
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                        {title}
                    </h3>
                    <div class="flex flex-wrap mt-2">
                        <ul class="flex flex-row mb-2 gap-x-2">
                            {tags.map((tag) => (
                                <li>
                                    <span
                                        class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                                    >
                                        <tag.icon class="size-4" />
                                        {tag.name}
                                    </span>
                                </li>
                            ))}
                        </ul>

                        <div class="mt-2 text-gray-700 dark:text-gray-400">
                            {description}
                        </div>
                        <footer class="flex items-end justify-start mt-4 gap-x-4">
                            {link && (
                                <LinkButton href={link}>
                                    <Link class="size-4" />
                                    Preview
                                </LinkButton>
                            )}
                        </footer>
                    </div>
                </div>
            </article>
        ))
    }
</div>
